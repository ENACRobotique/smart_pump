    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/PompeSAP.elf",
            "name": "Launch BMP",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "bmp",
            "BMPGDBSerialPort": "/dev/bmp_gdb",
            "armToolchainPath": "/opt/arm-gnu-toolchain-14.2/bin/",
            "gdbPath": "/opt/arm-gnu-toolchain-14.2/bin/arm-none-eabi-gdb",
            "svdFile": "${workspaceFolder}/STM32L432.svd"
        },
                {
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/PompeSAP.elf",
            "name": "Attach BMP",
            "request": "attach",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "bmp",
            "BMPGDBSerialPort": "/dev/bmp_gdb",
            "armToolchainPath": "/opt/arm-gnu-toolchain-14.2/bin/",
            "gdbPath": "/opt/arm-gnu-toolchain-14.2/bin/arm-none-eabi-gdb",
            "svdFile": "${workspaceFolder}/STM32L432.svd"
        }
    ]
}
