{
    "version" : "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "make",
            "options": {
                "statusbar": {
                    "label": "$(gear) Build"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Flash",
            "command": "make",
            "args" : [
                "flash"
            ],
            "dependsOn" : [
                "Build"
            ],
            "options":{
                "statusbar" : {
                 "label": "$(arrow-right) Flash"
                },
            },
        },
        {   
            "label" : "Clean",
            "command":"make", 
            "args": [
                "-D","/dev/ttyACMbmp"
            ],
            "options": {
                "statusbar": {
                    "label": "Serial monitor $(plug)"
                }
            }
        },



            


        
    ],
}
